<% include ../partials/header_things %>
<%- include('../partials/flash') %>
<%- include('../partials/navbar') %>

    <section class="section green">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <h1 class="page-header">Update Details</h1>
                    <form method="POST" action="/things/<%= thing._id%>?_method=PUT">
                        <div class="form-group">
                            <label for="thingId">New Thing ID</label>
                            <input type="hidden" class="form-control" id="thingId" value="<%=thing.thingId%>" placeholder="What is your device Id?" name="thingId">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="" name="name" value=<%=thing.name%>>
                            <label for="name">userId</label>

                        <% users.forEach(function (output) {%>
                            <div class="checkbox">
                              <label><input type="checkbox" name= "userId" value="<%= output._id %>"><%= output.name %></label>
                            </div>
                            <% }) %>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
