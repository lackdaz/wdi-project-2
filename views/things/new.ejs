<% include ../partials/header_things %>
<%- include('../partials/flash') %>
    <section class="section green">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <h1 class="page-header">New Thing</h1>
                    <form action="/things" method="POST">
                        <div class="form-group">
                            <label for="deviceId">Thing ID</label>
                            <input type="text" class="form-control" id="deviceIdInput" placeholder="What is your device id?" name="thingId">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="" name="name">
                            <label for="owner"></label>
                            <input type="hidden" class="form-control" id="owner" placeholder="" name="owner" value="<%= currentUser._id %>">

                            <label for="name">Users</label>

                        <% users.forEach(function (output) {%>
                            <div class="checkbox">
                              <label><input type="checkbox" name= "userId" value="<%= output._id %>"><%= output.name %></label>
                            </div>
                            <% }) %>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
