<%- include('../partials/flash') %>


<form method="POST" action="/settings/<%= users._id%>?_method=PUT">
    <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email" value="<%= users.email %>">
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" class="form-control" type="text" name="name" value="<%= users.name %>">
    </div>

    <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password" value="">
    </div>
    <div class="form-group">
        <label for="authPassword">Confirm password</label>
        <input id="authPassword" class="form-control" type="password" name="password2" value="">
    </div>
    <input class="btn btn-primary" type="submit">
</form>
